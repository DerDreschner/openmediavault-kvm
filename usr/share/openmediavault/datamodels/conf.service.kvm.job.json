{
	"type": "config",
	"id": "conf.service.kvm.job",
	"title": "kvm backup scheduled job",
	"queryinfo": {
		"xpath": "//services/kvm/jobs/job",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": false
		},
		"vmname": {
			"type": "string",
			"default": ""
		},
		"path": {
			"type": "string",
			"default": ""
		},
		"keep": {
			"type": "integer",
            "minimum": 0,
			"maximum": 65535,
			"default": 0
		},
		"compression": {
			"type": "boolean",
			"default": false
		},
		"sendemail": {
			"type": "boolean",
			"default": false
		},
		"comment": {
			"type": "string",
			"default": ""
		},
		"execution":{
			"type": "string",
			"enum": [
				"exactly", "hourly", "daily", "weekly",
				"monthly", "yearly", "reboot"
			],
			"default": "exactly"
		},
		"minute": {
			"type": "string",
			"pattern": "^[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|[*]$"
		},
		"everynminute": {
			"type": "boolean"
		},
		"hour": {
			"type": "string",
			"pattern": "^[0-9]|1[0-9]|2[0-3]|[*]$"
		},
		"everynhour": {
			"type":"boolean",
			"default": false
		},
		"month": {
			"type": "string",
			"pattern": "^[1-9]|1[0-2]|[*]$"
		},
		"dayofmonth": {
			"type": "string",
			"pattern": "^[1-9]|1[0-9]|2[0-9]|3[0-1]|[*]$"
		},
		"everyndayofmonth": {
			"type": "boolean",
			"default": false
		},
		"dayofweek": {
			"type": "string",
			"pattern": "^[1-7]|[*]$"
		}
	}
}
